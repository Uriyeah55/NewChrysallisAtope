<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/pinkBG"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventosActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIS EVENTOS"/>

    <LinearLayout
        android:id="@+id/menuBottom"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_marginTop="630dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/linBotPrincipal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/home"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/pitchBlack"
                android:text="MenÃº">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/linBotEventos">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/calendar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pitchBlack"
                android:text="Mis eventos">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/linBotFav">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/heartsilueta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pitchBlack"
                android:text="Favoritos">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/linBotPerfil">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pitchBlack"
                android:text="Mi perfil">
            </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
