<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkPink"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:weightSum="100">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:layout_weight="20">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/nuevo_logo"
            android:layout_marginTop="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="100dp"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/editUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuarie"
                android:paddingRight="15dp"/>
            <EditText
                android:id="@+id/editContra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textWebPassword"
                android:longClickable="false"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver contraseña"
                android:id="@+id/checkVerPassw"
                android:layout_marginTop="15dp"
                />
         </LinearLayout>






        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingBottom="30dp"
            android:layout_weight="80">
            <LinearLayout
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="100dp"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:gravity="center">


                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchInit"
                    android:text="Mantener sesión iniciada"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btoLogin"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENTRAR"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="100dp"
                android:background="@color/colorBotones"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>