<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newchrysallis">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!--PERMISOS QUE DEMANAREM A APP CHRYSALLIS-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/nuevo_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nuevo_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MisEventosActivity"/>
        <activity android:name=".MenuActivity"/>
        <activity android:name=".FavActivity"/>
        <activity android:name=".PerfilActivity"/>
        <activity android:name=".EventoActivity"/>
        <activity android:name=".LoginActivity"/>
    </application>
</manifest>